<Grid
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BooruViewer.Settings"
             xmlns:core="clr-namespace:Booru.Core;assembly=Booru.Core"
             xmlns:conv="clr-namespace:Booru.Ui.Converters;assembly=Booru.Ui"
             x:Class="BooruViewer.Settings.PreviewsSettings"
             mc:Ignorable="d" Height="Auto"
             d:DesignHeight="300" d:DesignWidth="300" x:Name="root">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <ComboBox Grid.Row="0" SelectedItem="{Binding Selected, ElementName=root}" x:Name="Containers" ItemsSource="{Binding Source={x:Static core:Core.PreviewsContainerTypes}}"/>
    <ScrollViewer Grid.Row="1">
        <StackPanel x:Name="ContainerSettings" Height="Auto"/>
    </ScrollViewer>
</Grid>
